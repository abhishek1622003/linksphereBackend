{
  "name": "linksphere-server",
  "version": "1.0.0",
  "description": "LinkSphere Server API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development tsx index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:dev": "NODE_ENV=production tsx index.ts",
    "check": "tsc --noEmit",
    "db:setup": "echo 'Database setup will happen at runtime'",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "@types/cors": "^2.8.19",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.39.1",
    "drizzle-kit": "^0.30.4",
    "drizzle-zod": "^0.7.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "firebase-admin": "^13.4.0",
    "ws": "^8.18.3",
    "zod": "^3.24.2",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "^20.16.11",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.25.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
